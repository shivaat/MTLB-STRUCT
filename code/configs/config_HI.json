{
  "mode": "DEV",
  "data": {
    "language": "HI",
    "include_dev_examples": false,
    "data_path": "../data/1.2/",
    "max_len": 150,
    "do_lower_case": false
  },
  "model": {
    "pretrained_model_name": "bert-base-multilingual-cased",
    "pretrained_model_vocab": "bert-base-multilingual-cased",
    "multi_task": true
  },
  "training": {
    "batch_size": 10,
    "num_epochs": 10,
    "learning_rate": 3e-5,
    "dep_loss_factor": 700,
    "save_dir": "./saved/",
    "seed": 100
  }
}
